<% content_for :mostoften do %>
<% if !@articles_mostoften.empty? %>
<h4><span>Najczęściej komentowane</span></h4>

<% @articles_mostoften[0..6].each do |article| %>
<div class = "postbok">
   <h4><%= link_to article.title, article_path(article) %> </h4>
   <ul class="postbok_info">
       <li class="date"><%= article.created_at %></li>
       <li class="comments"><%= article.comments.size.to_s() %></li>
   </ul>
   <img src= <%= article.avatar.url(:small) %> class="floatTL" />
</div>
<% end %>
<% end %>
<% end %>

<% content_for :newestcomments do %>
<% if !@newest_comments.empty? %>
<h4><span>Najnowsze komentarze</span></h4>
<% @newest_comments[0..10].each do |comment| %>
<ul id="recent-comment">
<b><%= idUsername(comment.user_id) %></b> o <a href="<%= commentArticlePath(comment) %>"><%= commentArticleTitle(comment) %></a>
</ul>
<% end %>
<% end %>
<% end %>
