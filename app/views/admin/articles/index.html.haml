%h2 Artykuły

- @articles.each do |article|
  %p
    %b= article.title
  %p

  = link_to "Edit", edit_admin_article_path(article)
  = button_to "Delete", admin_article_path(article), :method=>:delete, :class=>:destroy,:confirm=>"Are you sure?" 

  %hr

  = will_paginate @articles

%p= link_to 'Napisz artykuł', new_admin_article_path
%p= link_to 'Back', admin_root_path
